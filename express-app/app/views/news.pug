extends layout

block content
  .container
    .card__row
      if articles.length > 0
        each article in articles
          .card__item
            .card__title=article.title
            .card__subtitle=`Created ${h.dateRelative(article.date)}`
            p.card__content=article.description
            div
              a.badge.green(href=`https://tradingeconomics.com/${article.url}`) Read More
              span.badge.blue=article.country
              span.badge.blue=article.category
